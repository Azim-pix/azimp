{% extends 'admin/pages/sliders/sliders.html.twig' %}

{% block breadcrumb %}
    <li class="active">{{ 'label.sliders'|trans }}</li>
{% endblock %}

{% block inner %}

    <table class="table table-striped table-middle-aligned active-datatable" data-defaultsortby="0">
        <thead>
        <tr>
            <th scope="col" class="">#</th>
            <th scope="col" class="">{{ 'label.name'|trans }}</th>
            <th scope="col" class="text-center"></th>
        </tr>
        </thead>
        <tbody>
        {% for item in list %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>

                <td class="text-right">
                    <div class="item-actions">

                        <a title="{{ 'action.edit'|trans }}" href="{{ path('admin_pages_sliders_edit', {id: item.id}) }}" class="btn btn-circle bg-pink waves-effect waves-circle waves-float">
                            <i class="material-icons">edit</i>
                        </a>
                        <a title="{{ 'label.slides'|trans }}" href="{{ path('admin_pages_sliders_slides_list', {slider: item.id}) }}" class="btn btn-circle bg-green waves-effect waves-circle waves-float">
                            <i class="material-icons">layers</i>
                        </a>
                        <form action="{{ url('admin_pages_sliders_delete', { id: item.id }) }}" method="post" class="delete-form">
                            <input type="hidden" name="token" value="{{ csrf_token('delete') }}" />
                            <button type="button" title="{{ 'action.delete'|trans }}" class="btn btn-circle bg-grey waves-effect waves-circle waves-float"><i class="material-icons">delete_forever</i></button>
                        </form>

                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10" align="center">{{ 'text.noresults'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
