{% extends 'admin/page.html.twig' %}

{% block content %}

    <ol class="breadcrumb breadcrumb-col-teal">
        <li><a href="{{ path('admin_dashboard_index') }}"><i class="material-icons">home</i> Accueil</a></li>
        <li class="active">{{ 'label.cardtemplates'|trans }}</li>
    </ol>

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        {{ 'label.cardtemplates'|trans }}
                    </h2>
                    <div>
                        <a href="{{ path('admin_cards_templates_new') }}" class="btn waves-effect pull-right"><i class="material-icons">add</i> <span>{{ 'action.add'|trans }}</span></a>
                    </div>
                </div>
                <div class="body">

                    <table class="table table-striped table-middle-aligned active-datatable" data-defaultsortby="3" data-defaultsortdir="desc">
                        <thead>
                            <tr>
                                <th scope="col" class="">{{ 'label.name'|trans }}</th>
                                <th scope="col" class="">{{ 'label.region'|trans }}</th>
                                <th scope="col" class="">{{ 'label.department'|trans }}</th>
                                <th scope="col">{{ 'label.update'|trans }}</th>
                                <th scope="col" class="text-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for item in list %}
                            {% embed "admin/cards/templates/row.html.twig" with {'item': item} %}{% endembed %}
                        {% else %}
                            <tr>
                                <td colspan="10" align="center">{{ 'text.noresults'|trans }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
