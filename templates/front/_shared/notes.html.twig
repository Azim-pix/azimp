<div>
    <span class="headerPopover">Mes Notes ({{ notes | length }}) <button class="fa fa-times"></button></span>
    <div class="wrapPop">

        <ul class="scrollbar">
            {% for note in notes %}
                <li class="note-{{ note.id }}">
                    <span class="date">{{ note.createdAt | localizeddate('medium', 'short') }}</span>
                    <button class="fa fa-trash-alt cta-delete-note" data-id="{{ note.id }}" data-collection-id="{{ id }}"></button>
                    <p>
                        {{ note.text }}
                    </p>
                </li>
            {% endfor %}

        </ul>
    </div>
    <div class="col-md-12">
        <form>
            <textarea class="form-control" cols="3" name="note-text" placeholder="Ajouter une note"></textarea>
            <button class="btn cta-add-note" data-id="{{ id }}">Envoyer</button>
        </form>
    </div>
</div>