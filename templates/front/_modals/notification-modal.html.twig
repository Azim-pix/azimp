<script>
    $(window).on('shown.bs.modal',function()
    {
        var height = 0;
        $('.notification-message').each(function(i, value){
            height += parseInt($(this).height());
        });

        height += '';
        console.log(height);
        $(".notification-body").scrollTop(1000);
    })


    $(".card-favorite-modal").on("hide.bs.modal", function () {
        $('.card-favorite-modal').removeClass('card-favorite-modal');
    });
</script>