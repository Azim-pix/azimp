{% extends 'front/base.html.twig' %}

{% block body_class %}{{ parent() }} login{% endblock %}

{%  block meta_robots %}{% if page.indexed == false %}noindex,follow{% else %}{{ parent() }}{% endif %}{% endblock %}

{% block body %}

    <div class="wrapper">
        <div class="row">
            <div class="col-md-4 text-left">
                <a href="{{ path('front_homepage_index') }}"><img id="logo" src="{{ asset('build/images/logo-color.svg') }}" alt="Pix.City"></a>
            </div>
            <div class="col-md-8 text-right loginCancel">
                <a href="{{ path('front_login') }}">Annuler</a>
            </div>
        </div>


        <div class="col-md-4 left box">

            <h1>Mot de passe oublié</h1>
            <p>Choisissez votre nouveau mot de passe.</p>

        </div>
        <div class="col-md-8 right box">

            {% if not expired %}
                {% if not success %}
                    <form action="" id="change-password" method="POST">

                        <div class="form-group">
                            <label for="email">Mot de passe</label>
                            <div class="">
                                <input class="form-control" type="password" name="password" placeholder="{{ 'label.password'|trans }}" required autofocus>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email">Confirmer le mot de passe</label>
                            <div class="">
                                <input class="form-control" type="password" name="confirm" placeholder="{{ 'label.password'|trans }}" required>
                            </div>
                        </div>

                        {% if error %}
                            <div class="form-error">{{ error }}</div>
                        {% endif %}

                        <button class="btn transFx green btn-submit fa fa-envelope" type="submit"><span>Envoyer</span></button>
                    </form>
                {% else %}
                    <div class="text-center">
                        Votre mot de passe a bien été modifié
                        <br>
                        <br><a href="{{ path('front_login') }}" class="btn green">Retour à la connexion</a>
                    </div>
                {% endif %}
            {% else %}
                <div class="text-center">
                    Cette page n'est plus disponible.
                    <br>
                    <br><a href="{{ path('front_forgot_password') }}" class="btn green">Mot de passe oublié</a>
                </div>
            {% endif %}

        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}