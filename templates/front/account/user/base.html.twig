{% extends 'front/base.html.twig' %}

{% set route = app.request.get('_route') %}

{% block body %}
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#defaultNavbar1"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
                <a class="navbar-brand" href="/"><img src="{{ asset('build/images/logo-color.svg') }}" alt="Pix.City" /></a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="defaultNavbar1">

                <ul class="nav navbar-nav navbar-left nav-account">
                    <li><a class="{{ route starts with 'front_user_account_cards' ? 'active' }} fa fa-cards" href="{{ path('front_user_account_cards') }}"><span>Mes Cards</span></a></li>
                    <li><a class="{{ route starts with 'front_user_account_agendas' ? 'active' }} fa fa-calendar-alt" href="{{ path('front_user_account_agendas') }}"><span>Mes Agendas</span></a></li>
                    <li><a class="{{ route starts with 'front_user_account_pixies' ? 'active' }} fa fa-user" href="{{ path('front_user_account_pixies') }}"><span>Mes City-makers favoris</span></a></li>
                    <li><a class="{{ route starts with 'front_user_account_settings' ? 'active' }} fa fa-cog" href="{{ path('front_user_account_settings') }}"><span>Param√®tres</span></a></li>
                </ul>


            </div>
            <!-- /.navbar-collapse -->
            <a href="{{ path('front_homepage_index') }}" id="btnCloseAccount" class="fa fa-times"></a>
        </div>
        <!-- /.container-fluid -->
    </nav>

    {% block page_content %}

    {% endblock %}

    <!-- FOOTER -->

    <footer class="{% block footer_class %}simpleFooter{% endblock %}">
        {% embed "front/_shared/footer.html.twig" with {'footer_class': 'simpleFooter'} %}{% endembed %}
    </footer>

{% endblock %}
